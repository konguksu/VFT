<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoardFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="34dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ch0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="18dp"
        android:text="닉네임"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text=" 님의 고민으로 키워낸 곰들이에요!"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/nickName"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <!--  연어 프로그래스바  -->
            <ProgressBar
                android:id="@+id/salmonProg"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:layout_marginBottom="60dp"
                android:max="9"
                android:progress="1"
                android:progressDrawable="@drawable/progressbar_salmon"
                app:layout_constraintBottom_toTopOf="@+id/listView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/salmonIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_salmon"
                app:layout_constraintBottom_toBottomOf="@+id/salmonProg"
                app:layout_constraintStart_toStartOf="@+id/salmonProg"
                app:layout_constraintTop_toTopOf="@+id/salmonProg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="지금까지 "
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/salmonProg"
                app:layout_constraintStart_toEndOf="@+id/salmonIcon"
                app:layout_constraintTop_toTopOf="@+id/salmonProg" />

            <TextView
                android:id="@+id/totalSalmon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:text="00"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/salmonProg"
                app:layout_constraintStart_toEndOf="@+id/salmonIcon"
                app:layout_constraintTop_toTopOf="@+id/salmonProg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개의 연어를 주었어요!"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/salmonProg"
                app:layout_constraintStart_toEndOf="@+id/totalSalmon"
                app:layout_constraintTop_toTopOf="@+id/salmonProg" />

            <!--  꿀 프로그래스바  -->
            <ProgressBar
                android:id="@+id/honeyProg"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:max="9"
                android:progress="1"
                android:progressDrawable="@drawable/progressbar_honey"
                app:layout_constraintBottom_toTopOf="@+id/listView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/honeyIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_honey"
                app:layout_constraintBottom_toBottomOf="@+id/honeyProg"
                app:layout_constraintStart_toStartOf="@+id/honeyProg"
                app:layout_constraintTop_toTopOf="@+id/honeyProg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="지금까지 "
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/honeyProg"
                app:layout_constraintStart_toEndOf="@+id/honeyIcon"
                app:layout_constraintTop_toTopOf="@+id/honeyProg" />

            <TextView
                android:id="@+id/totalHoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:text="00"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/honeyProg"
                app:layout_constraintStart_toEndOf="@+id/honeyIcon"
                app:layout_constraintTop_toTopOf="@+id/honeyProg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개의 꿀을 주었어요!"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/honeyProg"
                app:layout_constraintStart_toEndOf="@+id/totalHoney"
                app:layout_constraintTop_toTopOf="@+id/honeyProg" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                android:layout_marginBottom="250dp"
                android:text="아직 열람 가능한 기록이 없어요!"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/honeyProg" />

            <ListView
                android:id="@+id/listView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/honeyProg" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>